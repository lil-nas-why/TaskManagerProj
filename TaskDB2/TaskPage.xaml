<Page x:Class="TaskDB2.TaskPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:local="clr-namespace:TaskDB2"
      mc:Ignorable="d" 
      d:DesignHeight="832" d:DesignWidth="1200"
      Title="TaskPage">

    <Page.Resources>
        <local:PriorityToColorConverter x:Key="PriorityToColorConverter"/>
    </Page.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="80"/>
            <ColumnDefinition Width="435"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="140"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <Border Background="SlateGray"/>
        </Grid>

        <Button Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10" Background="Transparent" BorderBrush="Transparent">
            <StackPanel Orientation="Horizontal">
                <Image Source="Assets/logo.png" Width="24" Height="50" Margin="0,0,5,0"/>
                <TextBlock Text="User Info" VerticalAlignment="Center"/>
            </StackPanel>
        </Button>

        <Button x:Name="LogOut" Content="Выйти" Background="Transparent" BorderBrush="Transparent" VerticalAlignment="Bottom" Margin="0 0 0 10" Click="LogOut_Click"/>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="60"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Grid.RowSpan="3" Background="LightGray"/>

            <StackPanel Orientation="Horizontal">
                <TextBlock Margin="30 10 0 0" Text="Задачи" FontSize="28" FontWeight="ExtraLight" />
                <Button x:Name="AddMainTask" Content="Добавить Задачу" Margin="170 14 0 10" Background="SlateGray"  Click="AddMainTask_Click" Style="{StaticResource MaterialDesignFlatButton}" Foreground="White"/>
            </StackPanel>

            

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border CornerRadius="10" BorderBrush="Gray" BorderThickness="2" Background="White" Margin="10 5 10 5" Padding="10" Grid.Row="1" Width="270">

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
                        
                        <TextBlock Text="Поиск: " Margin="5 10 0 5" VerticalAlignment="Center"/>
                        <TextBox x:Name="SearchBar" Margin="2" Width="auto" MinWidth="360" TextChanged="SearchBar_TextChanged" VerticalContentAlignment="Center" BorderBrush="Transparent" />
                        
                    </StackPanel>
                </Border>

                <Border CornerRadius="10" BorderBrush="Gray" BorderThickness="2" Background="White" Margin="10 5 10 5" Padding="10" Grid.Column="1" Width="120">

                    <ComboBox x:Name="PriorityFilterComboBox" Margin="10 0 0 0" Width="80" SelectionChanged="PriorityFilterComboBox_SelectionChanged">
                        <ComboBoxItem Content="Все" IsSelected="True"/>
                        <ComboBoxItem Content="Высокий"/>
                        <ComboBoxItem Content="Средний"/>
                        <ComboBoxItem Content="Низкий"/>
                        <ComboBoxItem Content="Завершено"/>
                    </ComboBox>
                </Border>
            </Grid>

            <Border CornerRadius="10" BorderBrush="Gray" BorderThickness="2" Background="White" Margin="10 5 10 5" Padding="10" Grid.Row="2">

            </Border>

            <ListView Name="ViewMainTusksLV" Background="Transparent" BorderBrush="Transparent" Grid.Row="2" Margin="20 30 20 10" ScrollViewer.HorizontalScrollBarVisibility="Hidden" ScrollViewer.VerticalScrollBarVisibility="Hidden" SelectionChanged="ViewMainTusksLV_SelectionChanged">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="30"/>
                                <RowDefinition Height="70"/>
                                <RowDefinition Height="20"/>
                            </Grid.RowDefinitions>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock x:Name="Symbol" Text="{Binding Name, StringFormat={}{0}}" FontSize="16" FontWeight="ExtraLight" Margin="0 10 0 0" Grid.Column="0"/>

                                <Label x:Name="PriorityLabelLV" Width="92" Height="20" FontSize="11" Background="{Binding Priority, Converter={StaticResource PriorityToColorConverter}}" Content="{Binding Priority, StringFormat={}{0}}" Foreground="White" VerticalAlignment="Stretch" HorizontalContentAlignment="Center" Grid.Column="1" HorizontalAlignment="Right"/>
                            </Grid>

                            <StackPanel Grid.Row="1" Margin="0 5 0 0">
                                <TextBlock x:Name="DescriptionBlockLV" Height="70" Width="375" Text="{Binding Description, StringFormat={}{0}}" Foreground="Black" FontSize="12" TextWrapping="Wrap" ScrollViewer.VerticalScrollBarVisibility="Hidden"/>
                            </StackPanel>

                            <StackPanel Grid.Row="2" Margin="0 0 0 0" Orientation="Horizontal">
                                <Border>
                                    <Label Width="100" Height="20" Background="SlateGray" Content="{Binding Deadline}" Foreground="White" FontSize="11" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                                </Border>
                            </StackPanel>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>

        <Grid Grid.Column="2" Background="White">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="28"/>
                <RowDefinition/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="10 17 10 10">
                <Label x:Name="PriorityLabel" HorizontalContentAlignment="Center" FontSize="14"
                    Background="{Binding Priority, Converter={StaticResource PriorityToColorConverter}}"
                    Foreground="White" Width="100" Height="30" Margin="0,0,10,0"/>

                <TextBlock x:Name="TaskName" FontSize="18" VerticalAlignment="Center"/>
            </StackPanel>

            <TextBlock MaxHeight="27,5" x:Name="DescBox" Grid.Row="1" Margin="10" TextWrapping="Wrap"/>

            <Border Grid.Row="3" Background="Gray" Height="0.5" Margin="15 5 15 0" VerticalAlignment="Top"/>

            <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Left" Margin="10,0,0,0">
                <TextBlock x:Name="Date" Background="LightBlue" Padding="5" Margin="0,0,10,0"/>
            </StackPanel>

            <TextBlock MaxHeight="27,5" x:Name="CommentBox" Grid.Row="3" Margin="10 10 10 10" TextWrapping="Wrap" TextAlignment="Left" HorizontalAlignment="Left" VerticalAlignment="Top" />

            <StackPanel Orientation="Horizontal" Grid.Row="4" HorizontalAlignment="Left" Margin="20,10,0,10">
                <Button x:Name="DeleteButton" Content="Удалить" Background="Red" BorderBrush="Transparent" FontSize="11" Width="120" Height="40" Margin="0,0,10,0" Click="DeleteButton_Click"/>
                <Button x:Name="EditButton" Content="Редактировать" Width="120" Height="40" Background="Gray" BorderBrush="Transparent" Margin="0,0,10,0" />
                <Button x:Name="CompleteButton" Content="Завершить" Background="LightGreen" BorderBrush="Transparent" Width="120" Height="40" Margin="100 0 10 0"  Click="CompleteButton_Click"/>
            </StackPanel>
        </Grid>

        <Grid Grid.Column="3">
            <Border Background="SlateGray" />

            <StackPanel Orientation="Vertical" VerticalAlignment="Bottom" Margin="0 0 0 10">

                <Button x:Name="ParseToJson" Content="в Json" Height="30" VerticalAlignment="Bottom" Margin="5" Click="ParseToJson_Click"/>
                <Button x:Name="ParseToTxt" Content="в Txt" Height="30" VerticalAlignment="Bottom" Margin="5 0 5 5 " Click="ParseToTxt_Click"/>

            </StackPanel>
        </Grid>

    </Grid>
</Page>
